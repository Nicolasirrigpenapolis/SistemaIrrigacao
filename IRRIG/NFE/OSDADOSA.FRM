Private Sub GravaDados()
Dim Tb As New GRecordSet

 On error Resume Next
 
 Set Tb = vgDb.OpenRecordSet("SELECT * From [Ordem de Serviço] Where [Sequencia da Ordem] = " & Ordem)
      
