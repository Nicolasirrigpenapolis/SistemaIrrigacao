Private Sub Comissao()
 Dim Contas As New GRecordSet
 Dim Tb As New GRecordSet
 Dim UltSeq As Long, TemReg As New GRecordSet
 Dim TbValida As New GRecordSet, VI_OS As New GRecordSet
 
 Set Tb = VgDb.OpenRecordSet("Comissão Auxiliar")
 Set Contas = VgDb.OpenRecordSet("SELECT [Sequencia da Manutenção], [Manutenção Contas Receber].[Sequencia da Ordem], Documento, [Manutenção Contas Receber].[Sequencia do geral], [Data de entrada], [Data de vencimento], Parcela, [Valor da Parcela], [Valor pago], [Data da baixa], [Valor Restante], [Sequencia do Vendedor] From [Manutenção Contas Receber] Left Join [Ordem de Serviço] On [Manutenção Contas Receber].[Sequencia da Ordem] = [Ordem de Serviço].[Sequencia da Ordem] WHERE " & Filtro())
 Set TemReg = VgDb.OpenRecordSet("SELECT * From [Comissão Auxiliar]")
 
 If Contas.RecordCount = 0 Then
    MsgBox("Não tem Comissão no Período Informado") 
    Exit Sub
 End If
 
 If TemReg.RecordCount > 0 Then
    VgDb.Execute "DELETE FROM [Comissão Auxiliar]"
 End If
 
  Do While Not Contas.EOF
   Set VI_OS = VgDb.OpenRecordSet("SELECT * FROM [Virabrequim da Os] Where [Sequencia da Ordem] = " & Contas![Sequencia da Ordem]) 
   If Not VI_OS![Tem Casco] Then ' Nao teve Casco emprestado
      With Tb 
      .AddNew
        ![Sequencia da Comissão] = UltSeq
        ![Documento] = Contas!Documento
        ![Sequencia Do geral] = Contas![Sequencia Do geral]
        ![Data de entrada] = Contas![Data de Entrada]
        ![Data de vencimento] = Contas![Data de vencimento]
        !Parcela = Contas!Parcela
        ![Valor da Parcela] = Contas![Valor da Parcela]
        ![Valor pago] = Contas![Valor pago]
        ![Data da baixa] = Contas![Data da Baixa]
        ![Valor restante] = Contas![Valor restante]
        ![Sequencia Do Vendedor] = Contas![Sequencia Do Vendedor]
      .Update
      .BookMark = .LastModified
      End With
   Else ' Teve Casco emprestado
   Set TbValida = VgDb.OpenRecordSet("SELECT * FROM [Manutenção Cascos] WHERE Baixado = 0 And [Sequencia da Ordem] = " & Contas![Sequencia da Ordem])
    If TbValida.RecordCount = 0 Then   
      With Tb 
       .AddNew
        ![Sequencia da Comissão] = UltSeq
        ![Documento] = Contas!Documento
        ![Sequencia Do geral] = Contas![Sequencia Do geral]
        ![Data de entrada] = Contas![Data de Entrada]
        ![Data de vencimento] = Contas![Data de vencimento]
        !Parcela = Contas!Parcela
        ![Valor da Parcela] = Contas![Valor da Parcela]
        ![Valor pago] = Contas![Valor pago]
        ![Data da baixa] = Contas![Data da Baixa]
        ![Valor restante] = Contas![Valor restante]
        ![Sequencia Do Vendedor] = Contas![Sequencia Do Vendedor]
       .Update
       .BookMark = .LastModified
      End With 
    End If   
   End If   
  Contas.MoveNext
  UltSeq = UltSeq + 1
  Loop
  
  frmRelComVe.Show
  frmRelComVe.txtDt_Inicial.text = Dt_Inicial
  frmRelComVe.txtDt_Final.text = Dt_Final
  frmRelComVe.txtVendedor.Value = Vendedor
  frmRelComVe.txtbtn.SetFocus
  SendK(13)
  Unload Me

End Sub


Private Function Filtro() As String
 Filtro = "[Data de Entrada] >= " & D(Dt_Inicial) & " And [Data de Entrada] <= " & D(Dt_Final) & " And [Manutenção Contas Receber].[Sequencia da Ordem] > 0 And [Valor Pago] > 0"
 
  If Vendedor > 0 Then
     Filtro = Filtro & " And [Sequencia do Vendedor] = " & Vendedor
  End If
  
End Function

