Private Sub Cancelamento() 
 Dim Tb As New GRecordSet
 Dim Produtos As New GRecordSet
   
   On Error GoTo DeuErro
      
   If Saida = 0 Then MsgBox "Favor Informar o Movimento de Saida.", vbExclamation + vbOKOnly, vaTitulo: Exit Sub
   If MsgBox("Deseja Realmente Cancelar esse Movimento de Saida - As Baixas do Contas a Receber e a Conta Tbm serão Canceladas?" & vbCrLf & "", vbExclamation + vbYesNo, vaTitulo) = vbNo Then Exit Sub
   
   Set Tb = vgDb.OpenRecordSet("SELECT Mvto.[Sequencia da saida], " & _
                               "Manu.[Sequencia da manutenção] Conta " & _
                               "FROM [Outras saidas estoque] Mvto " & _
                               "LEFT JOIN [Manutenção contas receber] Manu ON Mvto.[Sequencia da saida] = Manu.[Sequencia da saida] " & _
                               "WHERE Mvto.[Sequencia da saida] = " & Saida)
                               
   Set Produtos = vgDb.OpenRecordSet("SELECT * From [Produtos saidas estoque] Where [Sequencia da saida] = " & Saida) 
   
                          
   vgDb.BeginTrans 'Inicia a transação
       
   'Marcando Cancelada na Tabela  
    vgDb.Execute "Update [Outras saidas estoque] Set [Cancelado] = 1 Where [Sequencia da saida] = " & Saida
    
    If Tb!Conta > 0 AND Not Vazio(Tb!Conta) Then
      Do While Not Tb.EOF 'Excluindo o Contas se houver
         vgDb.Execute "DELETE FROM [Baixa Contas receber] WHERE [Sequencia da Manutenção] = " & Tb!Conta 'Baixa
         'vgDb.Execute "DELETE FROM [Movimentação da Conta Corrente] WHERE [Seqüência do Lançamento] = " & Tb!Conta 'Conta Corrente
         Tb.MoveNext
      Loop
      Tb.MoveFirst 'Vamos Voltar no Começo
      vgDb.Execute "DELETE FROM [Manutenção Contas receber] WHERE [Sequencia da saida] = " & Tb![Sequencia Da saida] 'Deleta a Conta gerado pelo Movimento
    End If   
    
    vgDb.CommitTrans 'Vomitando opsss Comitando rsrs
   
    MsgBox "Movimento de Saida Cancelado com Sucesso!!!", vbInformation + vbOKOnly, vaTitulo 'Suuuuuceeeeesssssoooo
    
    If Produtos.RecordCount > 0 Then
      Do While Not Produtos.EOF
         AtualizaEstoque(Produtos![Sequencia Do produto])
      Produtos.MoveNext
      Loop
      Produtos.MoveFirst      
    End If
   
    frmMoSaidas.Show
    frmMoSaidas.SetFocus
    'PosicionaRegistro frmDevCompr, "Sequencia da devolução", Devolucao
    frmMoSaidas.vgFiltroInicial = "[Sequencia da saida] = " & Saida
    InicializaFiltro frmMoSaidas
    frmMoSaidas.Reposition
     
DeuErro:
   If Err.Number <> 0 Then
      vgDb.RollBackTrans
      MsgBox Err.Description, vbCritical + vbOKOnly, vaTitulo
   End If
   Unload Me
   
End Sub

