   On Error Resume Next
   
   With vgFGrid
      Tag = "Entrada Contas  (Clicle no Registro que deseja Consultar e Aperte F3 para Abrir a Consulta)"
            
      vgNovaQuery = "SELECT [Sequencia da Entrada], [Data de Vencimento], Documento, [Forma de Pagamento], [Valor Total], [Razão Social] " & _
                    "FROM [Manutenção Contas Pagar] LEFT JOIN Geral ON [Manutenção Contas Pagar].[Sequencia Do Geral] = Geral.[Sequencia do Geral] " & _
                    "WHERE " & Filtro() & _
                    " ORDER BY Geral.[Sequencia do Geral]"
         
      Set Tb = vgDb.OpenRecordSet(vgNovaQuery)
           
      'NAO PODE TER ORDER BY
      .vgTitConsulta = Tag
      .vgFiltroInicial = Filtro
