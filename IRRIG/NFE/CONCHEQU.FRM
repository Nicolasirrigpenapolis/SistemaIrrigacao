Private Sub ProssegueExecucao()
   Dim Tb As New GRecordSet, i As Long
   Dim vgFGrid As New frmBrowse
   
   On Error Resume Next
   
   With vgFGrid
      Tag = "Consulta Cheques  (Clicle no Registro que deseja Consultar e Aperte F3 para Abrir a Consulta)"
            
      vgNovaQuery = "SELECT [Sequencia Do Cheque], [Razão Social], [Emitente do Cheque], [Codigo do Banco], " & _
                    "[Numero do Cheque], [Agencia] " & _
                    "FROM [Cheques Pre] LEFT JOIN Geral ON [Cheques Pre].[Sequencia do Geral] = Geral.[Sequencia Do Geral] " & _
                    "WHERE " & Filtro() & _
                    " ORDER BY [Numero do Cheque]"
         
      Set Tb = vgDb.OpenRecordSet(vgNovaQuery)
           
      'NAO PODE TER ORDER BY
      .vgTitConsulta = Tag
      .vgFiltroInicial = Filtro
      If Tb.RecordCount = 1 Then
         seqRegistro = Tb![Sequencia Do Cheque]
         frmCadChequ.Show
         frmCadChequ.vgFiltroInicial = "[Sequencia do Cheque] = " & seqRegistro
         InicializaFiltro frmCadChequ
         frmCadChequ.SetFocus
      Else
         With .grdBrowse
            .DefineOrderColumn .Columns("Sequencia do Cheque").Index
            .ColumnWidth("Razão Social") = 5000
            .ColumnWidth("Emitente do Cheque") = 5000
            .ColumnWidth("Numero do Cheque") = 1700
            .ShowFilterBar = True
         End With
         Hide
         .Width = Screen.Width - 200
         .Top = (Screen.Height - .Height) / 2
         .Left = (Screen.Width - .Width) / 2
         .Show
      End If
      DoEvents
    End With
End Sub

Private Function Filtro() As String
   On Error Resume Next
   
   Filtro = "Geral.[Sequencia do Geral] > 0"
   If Sequencia = 0 Then
      If Not Vazio(Emitente) Then 'Geral
         Filtro = Filtro & " AND [Emitente do Cheque] Like '%" & Emitente & "%'"
      End If 
      If Not Vazio(Agencia) Then  
         Filtro = Filtro & " AND Agencia = '" & Agencia & "'"
      End If   
   Else
      Filtro = Filtro & " AND [Sequencia do Cheque] = " & Sequencia
   End If
   
End Function

