'Inutiliza Número de NFe
Private Sub InutilizaNFe()
   Dim msgDados As String, msgRetWS As String, msgResultado As String, siglaUF As String, siglaWS As String
   Dim certificado As String, licenca As String, ambiente As Integer, cUF As String, ano As String
   Dim CNPJ As String, modelo As String, serie As String, nInicial As String, nFinal As String
   Dim Justificativa As String, procInutNFe As String, nProtocoloInut As String, dProtocoloInut As String
   Dim versao As String, cStat As Long, objNFeUtil As Object, Arq As Long, Tb As New GRecordSet
   Dim proxy As String, usuario As String, senha As String
   
   On Error GoTo DeuErro
   
   Screen.MousePointer = vbHourglass    ' ampulheta
   Set objNFeUtil = CreateObject("NFe_util_2G.util")
   lblProgresso.Caption = "Inutilizando NFe..."

   licenca = Empresa![Chave flexdocs]
   certificado = Parametros_da_nfe![Certificado digital] 
   siglaWS = "SP"
   siglaUF = "SP"
   modelo = "55" ' o modelo da NFe é sempre fixo em 55
   cUF = Parametros_da_nfe![Codigo da uf]
   CNPJ = RemoveCaracteres(Empresa!Cnpj)
   serie = Parametros_da_nfe![Serie da nfe]
   ano = Mid(anoTela, 3, 4)
   nInicial = nInicialTela
   nFinal = nFinalTela
   versao = "4.00"
   
   If Len(ano) <> 2 Then
      MsgBox "Necessário informar o ano de inutilização da numeração.", vbCritical + vbOKOnly, vaTitulo
      GoTo SaidaSub
   End If
   
   If nInicial <= 0 Then
      MsgBox "Necessário informar o número inicial de inutilização da numeração.", vbCritical + vbOKOnly, vaTitulo
      GoTo SaidaSub
   End If
   
   If nFinal <= 0 Then
      MsgBox "Necessário informar o número inicial de inutilização da numeração.", vbCritical + vbOKOnly, vaTitulo
      GoTo SaidaSub
   End If

   Justificativa = InputBox("Informe a Justificativa da Inutilização com pelo menos 15 Caracteres", "Inutilização de NFe")
   If Len(Justificativa) < 15 Then
      MsgBox "Necessário informar a justificativa com no mínimo 15 caracteres", vbCritical + vbOKOnly, vaTitulo
      GoTo SaidaSub
   End If

   If Parametros_da_nfe!Ambiente = 0 Then 'Produção
      ambiente = 1
   Else 'Homologação
      ambiente = 2
   End If

   'Vamos Inutilizar
   procInutNFe = objNFeUtil.InutilizaNroNF2G(siglaWS, ambiente, certificado, versao, msgDados, msgRetWS, cStat, msgResultado, cUF, ano, CNPJ, modelo, serie, nInicial, nFinal, Justificativa, nProtocoloInut, dProtocoloInut, proxy, usuario, senha, licenca)
   
   'Verificando
   If cStat = 102 Then 'Sucessoooo
   
   MsgBox "Faixa de Inutilização Concluída com Sucesso!", vbInformation + vbOKOnly, vaTitulo
      
      'Salvando o xml...
      Arq = FreeFile
      If Parametros_da_nfe!Ambiente = 0 Then 'Produção
         Open Parametros_da_nfe![Diretorio 1 nfe produção] & Format(nInicial, "000000") & "-" & Format(nFinal, "000000") & "_INUTILIZADO.xml" For Append As #Arq
            Print #Arq, procInutNFe
         Close #Arq
      Else 'Homologação
         Open Parametros_da_nfe![Diretorio 1 nfe homologação] & Format(nInicial, "000000") & "-" & Format(nFinal, "000000") & "_INUTILIZADO.xml" For Append As #Arq
            Print #Arq, procInutNFe
         Close #Arq
      End If
      GoTo SaidaSub
   Else
      MsgBox msgResultado & Chr(13) & Chr(13), vbCritical + vbOKOnly, "Atenção: Inutilização de numeração da NFe Falhou"
      GoTo SaidaSub
   End If
   
DeuErro:
   If Err <> 0 Then
      MsgBox Err.Description, vbCritical + vbOKOnly, vaTitulo
   End If

SaidaSub:
   Screen.MousePointer = vbDefault ' normal
   Set objNFeUtil = Nothing
   lblProgresso.Caption = ""
End Sub

